<?xml version="1.0"?>
<robot name="physics">

  <!-- Slide bar (static base) -->
  <link name="slideBar">
    <visual>
      <geometry>
        <box size="30 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="green">
        <color rgba="0 0.8 0.8 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <!-- Cart -->
  <link name="cart">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.2"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.5 0.2"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <!-- Cart slider joint -->
  <joint name="slider_to_cart" type="prismatic">
    <axis xyz="1 0 0"/>
    <origin xyz="0 0 0"/>
    <parent link="slideBar"/>
    <child link="cart"/>
    <limit effort="1000.0" lower="-15" upper="15" velocity="5"/>
  </joint>

  <!-- Pole 1 -->
  <link name="pole">
    <visual>
      <geometry>
        <box size="0.05 0.05 1.0"/> <!-- Set length to 1.0 -->
      </geometry>
      <origin xyz="0 0 0.5"/> <!-- Adjust position to center pole -->
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 1.0"/> <!-- Set length to 1.0 -->
      </geometry>
      <origin xyz="0 0 0.5"/> <!-- Adjust position to center pole -->
    </collision>
    <inertial>
      <origin xyz="0 0 0.5"/> <!-- Adjust position to center pole -->
      <mass value="1"/> <!-- Set mass to 1 -->
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <!-- Cart to Pole 1 joint -->
  <joint name="cart_to_pole" type="continuous">
    <axis xyz="0 1 0"/>
    <origin xyz="0 0 0"/>
    <parent link="cart"/>
    <child link="pole"/>
  </joint>

  <!-- Pole 2 -->
  <link name="pole2">
    <visual>
      <geometry>
        <box size="0.05 0.05 1.0"/> <!-- Set length to 1.0 -->
      </geometry>
      <origin xyz="0 0 0.5"/> <!-- Adjust position to center pole -->
      <material name="red">
        <color rgba="0.8 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 1.0"/> <!-- Set length to 1.0 -->
      </geometry>
      <origin xyz="0 0 0.5"/> <!-- Adjust position to center pole -->
    </collision>
    <inertial>
      <origin xyz="0 0 0.5"/> <!-- Adjust position to center pole -->
      <mass value="1"/> <!-- Set mass to 1 -->
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <!-- Pole 1 to Pole 2 joint -->
  <joint name="pole_to_pole2" type="continuous">
    <axis xyz="0 1 0"/>
    <origin xyz="0 0 1.0"/> <!-- Adjust to correct position -->
    <parent link="pole"/>
    <child link="pole2"/>
  </joint>

</robot>
